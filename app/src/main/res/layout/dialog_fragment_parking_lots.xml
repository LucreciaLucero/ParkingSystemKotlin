<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_dialog_fragment_parking_lots"
        style="@style/DialogFragmentTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/input_text_dialog_fragment_parking_lots"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_text_dialog_fragment_parking_lots"
        android:layout_width="@dimen/edit_text_dialog_fragment_parking_lots_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top_edit_text_dialog_fragment"
        android:background="@drawable/border"
        android:imeOptions="actionDone"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@id/button_save_dialog_fragment_parking_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_dialog_fragment_parking_lots" />

    <Button
        android:id="@+id/button_save_dialog_fragment_parking_size"
        style="@style/SaveButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_cancel_dialog_fragment_parking_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_text_dialog_fragment_parking_lots" />

    <Button
        android:id="@+id/button_cancel_dialog_fragment_parking_size"
        style="@style/CancelButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_save_dialog_fragment_parking_size"
        app:layout_constraintTop_toTopOf="@id/button_save_dialog_fragment_parking_size" />
</androidx.constraintlayout.widget.ConstraintLayout>
